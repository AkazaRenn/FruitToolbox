<?xml version="1.0" encoding="utf-8"?>
<winex:WindowEx
    x:Class="FruitLanguageSwitcher.Views.Flyout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:winex="using:WinUIEx"
    xmlns:views="using:FruitLanguageSwitcher.Views"
    MinWidth="127"
    Height="47"
    mc:Ignorable="d">
    <Grid>
        <TextBlock x:Name="FlyoutAnchor" Text="" HorizontalAlignment="Center" VerticalAlignment="Center">
            <FlyoutBase.AttachedFlyout>
                <Flyout x:Name="FlyoutControl" Placement="Full">
                    <TextBlock x:Name="FlyoutText" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Flyout>
            </FlyoutBase.AttachedFlyout>
        </TextBlock>
        <views:TrayIconView x:Name="TrayIconView" />
    </Grid>
    <Window.SystemBackdrop>
        <winex:TransparentTintBackdrop TintColor="#55ffffff"/>
    </Window.SystemBackdrop>
</winex:WindowEx>
